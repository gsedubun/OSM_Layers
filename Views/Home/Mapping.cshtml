   }
   </style>
}

<div class="form-group col-md-4">
    <label>UserName:</label>
    <input type="text" id="userName" class="form-control" />
<input type="button" id="btnsubmit" value="Search" class="btn btn-default"/>
</div>
<div id="peta"></div>


@section Scripts{
    <script type="text/javascript">
           
        $(document).ready(function(){
                var mymap = L.map('peta').locate({setView:true, maxZoom:5});
                L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw', {
                    maxZoom: 18,
                    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
                        '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
                        'Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                    id: 'mapbox.streets'
                }).addTo(mymap);
               
                // var polygon = L.polygon([
                //     [51.509, -0.08],
                //     [51.503, -0.06],
                //     [51.51, -0.047]
                // ]).addTo(mymap);
                var markers = [];
                function Mapping(data){
                    console.log(markers.length);
                    for(let idx=0; idx < markers.length; idx++){
                        markers[idx].removeFrom(mymap);
                        markers.pop();
                    } 

                    for (let index = 0; index < data.length; index++) {
                        const element = data[index];
                        console.log(element);
                        var marker = L.marker([element.fLatitude, element.fLongitude], { title: element.engineerName +" on " +element.fTime}).addTo(mymap);
                        marker.bindPopup(element.fkpt +" on " +element.fTime).openPopup();
                        markers.push(marker);

                        if(index===0){
                            mymap.center = [element.fLatitude, element.fLongitude];// (center: [element.fLatitude, element.fLongitude], zoom:13);
                        }
                    }
                }

                $('#btnsubmit').click(function(e){
                    var userName= $('#userName').val();
                    $.ajax({
                        url:'/home/coordinate?userName='+userName,
                        method:'GET',
                        success: function(d){
                            console.log(d);
                            Mapping(d);
                        },
                        error: function(msg){
                            console.log(msg);
                        }
                    });
                });

            });
    </script>
}